<div>
    <h1 class="text-center">Search Results</h1>
    <h3 class="text-center"><%= @games.length %> games found</h3>
    <ul class="row games_list">
    <% @games.each do |game| %>
      <li class="col-5 col-md-3 col-lg-2 game_card" data-toggle="modal" data-target="#<%= game['id'] %>">
          <%= link_to game_path(game['id']) do %>
            <%= image_tag game['cover_url'], class: 'img-fluid' %>
            <h3><%= game['name'] %></h3>
          <% end %>
      </li>
    <% end %>
    </ul>
</div>